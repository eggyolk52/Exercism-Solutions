(import (rnrs))

(define (matching? opening closing)
  (or (and (char=? #\( opening)
           (char=? #\) closing))
      (and (char=? #\[ opening)
           (char=? #\] closing))
      (and (char=? #\{ opening)
           (char=? #\} closing))))

(define (balanced? str)
  (let ((len (string-length str))
        (stack '()))
    (for-each (lambda (char)
                (if (member char '(#\( #\[ #\{ #\) #\] #\}))
                    (set! stack (cons char stack)))
                (if (and (>= (length stack) 2)
                         (matching? (cadr stack) (car stack)))
                    (set! stack (cddr stack))))
              (string->list str))
    (null? stack)))
